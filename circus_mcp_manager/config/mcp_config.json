{
    "server": {
        "name": "circus-mcp-manager",
        "version": "1.0.0",
        "description": "Circus Process Manager with MCP Protocol Support"
    },
    "transport": {
        "type": "stdio"
    },
    "tools": [
        {
            "name": "process_control",
            "description": "Control processes (start, stop, restart)",
            "parameters": {
                "action": {
                    "type": "string",
                    "enum": [
                        "start",
                        "stop",
                        "restart",
                        "reload"
                    ],
                    "description": "Action to perform on the process"
                },
                "process_name": {
                    "type": "string",
                    "description": "Name of the process to control"
                }
            }
        },
        {
            "name": "get_status",
            "description": "Get status of processes",
            "parameters": {
                "process_name": {
                    "type": "string",
                    "description": "Name of the process (optional, returns all if not specified)"
                }
            }
        },
        {
            "name": "send_input",
            "description": "Send input to a process",
            "parameters": {
                "process_name": {
                    "type": "string",
                    "description": "Name of the target process"
                },
                "input_data": {
                    "type": "string",
                    "description": "Data to send to the process"
                }
            }
        },
        {
            "name": "get_logs",
            "description": "Get logs from processes",
            "parameters": {
                "process_name": {
                    "type": "string",
                    "description": "Name of the process"
                },
                "lines": {
                    "type": "integer",
                    "description": "Number of lines to retrieve (default: 100)"
                },
                "level": {
                    "type": "string",
                    "enum": [
                        "error",
                        "warning",
                        "info",
                        "debug"
                    ],
                    "description": "Log level filter"
                }
            }
        }
    ],
    "resources": [
        {
            "uri": "circus://processes",
            "name": "Process List",
            "description": "List of all managed processes"
        },
        {
            "uri": "circus://logs/{process_name}",
            "name": "Process Logs",
            "description": "Real-time log stream for a specific process"
        },
        {
            "uri": "circus://stats",
            "name": "System Statistics",
            "description": "System and process statistics"
        }
    ],
    "security": {
        "authentication": {
            "enabled": false,
            "type": "api_key"
        },
        "rate_limiting": {
            "enabled": true,
            "requests_per_minute": 60
        }
    }
}